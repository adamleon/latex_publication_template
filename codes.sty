%% This package contains shorthand functions for handling codes
\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{engine/codes}[2016/10/03 Codes Package]

%% Packages
%% ----------------------------------------------------------------------------
\RequirePackage{listings}
\RequirePackage{caption}
\RequirePackage{xcolor}

%% Listings setup
\lstset{language=C++,
	numbers=none,
	tabsize=2,
	breaklines=true,
	basicstyle=\footnotesize\selectfont\normalfont\ttfamily\hyphenchar\font\m@ne\@noligs, 
	extendedchars=false, 
	framerule=0pt, 
	backgroundcolor=\color{gray!25}, 
	columns=flexible,
	showstringspaces=false}
\renewcommand{\lstlistingname}{Code}

%% Code loader from file
%    File name and label
%    Caption
\newcommand{\codeInput}[2]{%
	\lstinputlisting[frame=single, label=cd:#1, caption=#2]{#1.txt}	
}

\endinput